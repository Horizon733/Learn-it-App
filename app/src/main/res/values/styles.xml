<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="no_action_bar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="button_rg" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="elevation">6dp</item>
    </style>

    <style name="snapchat_button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorYellow</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="cornerRadius">10dp</item>
        <item name="icon">@drawable/ic_snapchat</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconSize">32dp</item>
    </style>

    <style name="text_button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="dark_toggler" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">end</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="icon">@drawable/ic_dark_mode_toggle</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">14dp</item>
        <item name="iconTint">@color/textColor</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Button.Circle</item>
        <item name="strokeColor">@color/textColor</item>
    </style>
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>